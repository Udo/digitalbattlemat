<h1>Battle Mats</h1>
<p>Below you find a list of previously created Battle Mats, and the possiblity
	to create a new one.</p>
<% if @mats.size > 0 then %>
	<ol>
		<% @mats.each do |m| %>
			<li style="padding: 0.2em 0 0.2em 0">
				<p style="margin-bottom: 0.2em">
					<strong><%= m.description %></strong>
				</p>
				<div class="button-mat-show">
					<%= link_to 'Show ...', :action => "show", :id => m %>
				</div>&nbsp;
				<div class="button-mat-delete">
					<%= link_to "Delete ...", 
						{ :action => "destroy", :id => m }, :method => :delete %>
				</div>
			</li>
		<% end %>
	</ol>
<% end %>

<div class="button-create">
	<%= link_to 'Create a new Battle Mat ...', :action => 'new' %>
</div>